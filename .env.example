# =============================================================================
# CreatorConnect - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# Required vars are marked with [REQUIRED], others are optional.

# --- Infrastructure ---
DATABASE_URL=                          # [REQUIRED] PostgreSQL connection string
SESSION_SECRET=                        # [REQUIRED] Session encryption key
NODE_ENV=development                   # development | production
APP_PORT=5000                          # Express server port
PRODUCTION_URL=https://ugc.turbopartners.com.br

# --- Authentication ---
GOOGLE_CLIENT_ID=                      # Google OAuth client ID
GOOGLE_CLIENT_SECRET=                  # Google OAuth client secret
ADMIN_PASSWORD=                        # Admin login password

# --- AI Services ---
OPENROUTER_API_KEY=                    # [REQUIRED] Primary AI provider (Claude + Gemini via OpenRouter)
AI_INTEGRATIONS_OPENAI_API_KEY=        # OpenAI (gpt-4o) for sentiment analysis, blog, post analysis
AI_INTEGRATIONS_OPENAI_BASE_URL=       # Custom base URL (optional, can point to OpenRouter)
GOOGLE_GENAI_API_KEY=                  # Google Gemini direct (fallback)
ANTHROPIC_API_KEY=                     # Anthropic Claude direct (fallback)

# --- Meta / Instagram ---
META_APP_ID=                           # Meta App ID (Marketing API, Partnership Ads)
META_APP_SECRET=                       # Meta App secret
INSTAGRAM_APP_ID=                      # Instagram App ID (OAuth, Graph API)
INSTAGRAM_APP_SECRET=                  # Instagram App secret
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=        # Webhook verification token

# --- TikTok ---
TIKTOK_CLIENT_KEY=                     # TikTok OAuth client key
TIKTOK_CLIENT_SECRET=                  # TikTok OAuth client secret
TIKTOK_REDIRECT_URI=                   # TikTok OAuth redirect URI

# --- Payments (Stripe) ---
STRIPE_PUBLISHABLE_KEY=                # Public key (client-side)
STRIPE_SECRET_KEY=                     # Secret key (server-side)
STRIPE_WEBHOOK_SECRET=                 # Webhook signing secret (production)
STRIPE_WEBHOOK_SECRET_DEV=             # Webhook signing secret (development)

# --- External Services ---
APIFY_API_KEY=                         # Apify (Instagram/TikTok scraping)
SENDGRID_API_KEY=                      # SendGrid (transactional emails)
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com
ASSINAFY_API_KEY=                      # Assinafy (digital contracts)
ASSINAFY_WORKSPACE_ID=                 # Assinafy workspace ID

# --- Storage (Google Cloud) ---
DEFAULT_OBJECT_STORAGE_BUCKET_ID=      # GCS bucket for uploads and profile pics

# --- Dev-only (NODE_ENV=development) ---
DEV_LOGIN_EMAIL_CREATOR=               # Quick login email (creator role)
DEV_LOGIN_EMAIL_COMPANY=               # Quick login email (company role)
DEV_LOGIN_EMAIL_ADMIN=                 # Quick login email (admin role)
